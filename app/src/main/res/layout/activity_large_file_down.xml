<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LargeFileDownActivity">

    <TextView
        android:text="@string/lf_activity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lf_tv_title" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/titleColor" android:textSize="24sp" android:layout_marginTop="16dp"/>
    <TextView
        android:text="@string/lf_tv_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/lf_tv_description"
        app:layout_constraintTop_toBottomOf="@+id/lf_tv_title" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
        android:textColor="@color/descriptionColor"
        android:layout_marginTop="12dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp" android:gravity="start"/>
    <Button
        android:text="@string/run_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lf_run_button" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp" android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/lf_tv_description" android:background="@color/buttonColor"
        android:textColor="@color/white"/>
    <TextView
        android:text="@string/report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lf_tv_report" android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/lf_run_button" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:textSize="24sp"
        android:textColor="@color/titleColor"/>
    <TextView
        android:text="@string/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lf_time_label" android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/lf_tv_report" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:textColor="@color/textColor"
        android:textSize="18sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lf_time_report" app:layout_constraintStart_toEndOf="@+id/lf_time_label"
        android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/lf_tv_report" android:textSize="18sp"/>

</android.support.constraint.ConstraintLayout>